<body>

<h2>Random Comment Generator</h2>
<button onclick="generate()">Generate Comment</button>

<div id="output"></div>

<script>
const comments = [
 "Very useful app",
 "Amazing experience",
 "Fast and easy to use",
 "Highly recommended",
 "Works smoothly",
 "Great interface",
 "Loved this app",
 "Best app ever",
 "Helpful and simple",
 "Excellent performance"
];

function generate(){
 let random = comments[Math.floor(Math.random() * comments.length)];
 document.getElementById("output").innerText = random;
}
</script>

</body>
